/* pages/index/index.wxss */
image{
  width: 100%;
}
.title{
  text-align: center;
  margin-top: 10px;
}

.column_box{
  padding: 10px 15px;
}
.icon{
  width: 24px;
  height: 24px;
  margin-bottom: 5px;
  margin: 0 auto;
  display: block;
}
.col_btn{
  padding: 10px 0;
  border-radius: 5px;
  color: #fff;
}
.col_btn:not(:last-of-type){
  margin-right: 20rpx;
}

.classif_box{
  width: 100%;
  /*  */
   
  position: relative;
  color: #fff;
  margin-top: 10px;
}
.classif_box .classif_box_1{
  margin: 0 15px;
  overflow: hidden;
}
.classif_box .classif_box_item{
   float: left; 
   position: relative;
   margin-bottom: 10px;
}
.classif_box .classif_box_item .a{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.classif_box .classif_box_three{
  width: calc((100% - 30px) / 3);
  padding-bottom: calc((100% - 30px - 30px) / 3);
}
.classif_box .classif_box_three:nth-of-type(2n+2){
  margin: 0 15px;
}
.classif_box .classif_box_two{
  width: calc((100% - 15px) / 2);
  padding-bottom: calc((100% - 30px - 30px) / 3);
}
.classif_box .classif_box_two:nth-of-type(2n+1){
  margin-left:15px;
}
.classif_box .classif_box_one{
  width: calc((100%));
  padding-bottom: calc((100% - 30px - 30px) / 3);
}
.classif_box image{
  margin-bottom: 5px;
  display: block;
}

.danwei_box{
  overflow: hidden;
  margin: 10px 15px;
  color: #fff;
}
.danwei_box .danwei_item{
  width: calc((100% - 60px) / 5);
  padding-bottom: calc((100% - 60px) / 5);
  float: left;
  position: relative;
  margin-bottom: 15px;
}
.danwei_box .danwei_item:not(:nth-of-type(5n + 1)){
  margin-left: 15px;
}
.danwei_box .danwei_item .danwei_item_box{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}