.banner{width:100%;height:353rpx;overflow: hidden;}
.banner .pic{width:100%;height:100%;}
.banner .title{font-size:50rpx;text-shadow:1px 1px 2px #333;color:#fff;width:100%;top:70rpx;left:0;z-index: 1;}
.banner:after{content:"";display:block;width:20%;height:1px;background: #fff;position: absolute;left:40%;top:150rpx;z-index: 1;}
.banner .tag{font-size:0.747rem;color:#fff;width:100%;top:170rpx;left:0;z-index: 1;text-shadow:1px 1px 2px #333;}
.banner button[type="warn"][plain]{top:230rpx;left:318rpx;color:#fff;border-color: #fff;text-shadow:1px 1px 2px #333;box-shadow:0 0 2px #333}

.sjs_bar{height:4.933rem;}
.sjs_bar .pic{width:2.96rem;height:2.96rem;border-radius: 50%;margin-top:0.986rem;}
.sjs_bar .name{font-size:0.933rem;left:3.5rem;top:1.4rem;color:#333;}
.sjs_bar .des{font-size:0.813rem;left:3.5rem;top:2.6rem;color:#666;}
.sjs_bar .btn{right:0;top:1.7rem;}
.sjs_bar contact-button{right:0;top:1.7rem;}

.detaile{padding:10px 0;}
.linian title{display:block;line-height: 30px;color:#333;font-size: 16px;}
.content image{display:block;width:100%;margin:10px 0 15px;}

.favorite {padding: 40rpx 0 0; position: relative;}
.favorite .btn_box:after{content: "";background: #eee;width:240rpx;height:1px;position: absolute;left:40rpx;top:100rpx;}
.favorite .btn_box:before{content: "";background: #eee;width:240rpx;height:1px;position: absolute;right:40rpx;top:100rpx;}
.favorite .btn_box .btn{width:110rpx;height: 110rpx;border-radius: 50%;background-color: #ffc501;text-align: center;font-size:26rpx;margin:0 auto;color:#fff;overflow: hidden;}
.favorite .btn_box .btn.on{background: #eee;}
.favorite .btn_box .icon{height: 60rpx;background: url(data:image/png;base64,) no-repeat center;background-size: 36% auto;margin-top: 8rpx;}

.favorite .btn_box .btn.on{background: #ccc;}
.favorite .count{text-align: center;padding:10rpx 0;font-size: 30rpx;}
.favorite .count text{color:#ffc501;}
.favorite .head_list{padding-left: 28rpx;}
.favorite .head_list .pic{width:110rpx;height:110rpx;margin:10rpx 15rpx;border-radius: 50%;}
.favorite .more{margin:20rpx auto;}