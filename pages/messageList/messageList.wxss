/* pages/list/list.wxss */
.search{
  height: 60rpx;
  padding: 10px 15px;
  overflow: hidden;
}
.search .btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: block;
  background: dodgerblue;
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;

}

.cons{
  padding: 15px;
}
.cons .cons_li{
  margin-bottom: 10px;
}
.cons .cons_li .title{
  flex: 5;
  padding-right: 30px; 
}
.cons .cons_li .date{
  flex: 2;
}

.total{
  color: rgb(117, 117, 117);
}