.card{
  color: #fff;
  background: #f5f8fa;
}
.card .bg{
  width: 100%;
  height: 283rpx;
  background: #fe3a35;
}
.card .card_posi{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 45rpx;
}
.card .card_posi .tit{
  margin-top: 43rpx;
  margin-left: 160rpx;
  display: block;
}
.card .card_posi .card_des{
  height: 370rpx;
  line-height: 52rpx;
  overflow: auto;
  margin: 25px 15px 15px;
  padding: 15px;
  font-size: 32rpx;
  color: #000;
  background: #fff;
  border-radius: 5px;
}
.card .card_posi .card_form{
  background: #fff;
  color: #000;
  font-size: 32rpx;
}
.card .card_posi .card_form .card_form_li{
  line-height: 70rpx;
  border-bottom: 1px solid #f5f8fa;
  padding: 5px 0;
}
.card .card_posi .card_form .card_form_li image.icon{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-left: 70rpx;
}
.card .card_posi .card_form .card_form_li text{
  width: 120rpx;
  margin-left: 20rpx;
}
.card .card_posi .card_form .card_form_li .input{
  width: 330rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 50rpx;
}
.card .card_posi .login{
  width: 80%;
  line-height: 80rpx;
  background: #fe3a35;
  margin: 40rpx auto 0;
  text-align: center;
  font-size: 18px;
}
.card .card_posi .forgetPass{
  width: 80%;
  color: #b7b7b7;
  text-align: right;
  font-size: 14px;
  margin: 40rpx auto 0;
}

